<Window x:Class="ConverterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConverterApp"
        mc:Ignorable="d"
        Title="ConverterApp" SizeToContent="WidthAndHeight">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBox Width="100" Margin="4" Name="MetricValue"/>
            <ComboBox Width="80" Margin="4" Name="MetricUnit" SelectionChanged="MetricUnit_SelectionChanged">
                <ComboBoxItem Content="m"/>
                <ComboBoxItem Content="Inch"/>
                <ComboBoxItem Content="Yard"/>
                <ComboBoxItem Content="Mile"/>
            </ComboBox>

        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="ImperialUnitToMetric" Margin="4" Width="40" Content="▲" Click="ImperialUnitToMetric_Click"/>
            <Button Name="MetricToImperialUnit" Margin="4" Width="40" Content="▼" Click="MetricToImperialUnit_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBox Name ="ImperialValue" Margin="4" Width="100"/>
            <ComboBox Name="ImperialUnit" Margin="4" Width="80" SelectionChanged="ImperialUnit_SelectionChanged">
                <ComboBoxItem Content="m"/>
                <ComboBoxItem Content="Inch"/>
                <ComboBoxItem Content="Yard"/>
                <ComboBoxItem Content="Mile"/>
            </ComboBox>
        </StackPanel>
    </StackPanel>


</Window>
