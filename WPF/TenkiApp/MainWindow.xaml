<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TenkiApp"
        mc:Ignorable="d"
        Title="TenkiApp" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 上段：入力＋現在の天気 -->
            <RowDefinition Height="10"/>
            <!-- 少し余白 -->
            <RowDefinition Height="*"/>
            <!-- 下段：未来予報 -->
        </Grid.RowDefinitions>

        <!-- 上段：横並び -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- 左：都市名入力 -->
                <ColumnDefinition Width="20"/>
                <!-- 少し余白 -->
                <ColumnDefinition Width="*"/>
                <!-- 右：現在の天気 -->
            </Grid.ColumnDefinitions>

            <!-- 左：都市名入力 -->
            <StackPanel Grid.Column="0" Width="290" Height="114">
                <TextBlock Text="都市名" HorizontalAlignment="Center"/>
                <TextBox x:Name="tosiTextBox" Width="240" HorizontalAlignment="Center" Margin="0,5" Height="28"/>
                <Button Content="天気情報を取得" HorizontalAlignment="Center" Margin="0,10,0,0" Click="GetWeatherButton_Click" Height="35" Width="150"/>
            </StackPanel>

            <!-- 右：現在の天気情報 + 絵文字アイコン -->
            <Grid Grid.Column="2" Width="360" Height="120">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    
                    <ColumnDefinition Width="50"/>
                    
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="TemperatureText" FontSize="16"/>
                    <TextBlock x:Name="WindSpeedText" FontSize="16"/>
                    <TextBlock x:Name="HumidityText" FontSize="16"/>
                    <TextBlock x:Name="TimeText" FontSize="14" Margin="0,10,0,0"/>
                </StackPanel>

                <TextBlock x:Name="WeatherIcon" Grid.Column="1" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Grid>


        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <UniformGrid x:Name="ForecastPanel" Rows="1" Columns="5" Margin="0,10,0,0"/>
        </ScrollViewer>
    </Grid>
</Window>
